@model Shop.WebUi.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete category</h1>

<h3>Are you sure you want to delete this category</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-info btn-lg" />
        <input type="button" onclick="location.href='@Url.Action("Index", "Categories")'" value="Go back to list" class="btn btn-info btn-lg" />
    </form>
</div>
