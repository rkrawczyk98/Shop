@model Shop.WebUi.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1>Question details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Question
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a asp-controller="Answers" asp-action="Create" asp-route-QuestionId="@Model?.Id" class="btn btn-primary">Add answer</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id"><button class="btn btn-info btn-lg">Edit</button></a>
    <input type="button" onclick="location.href='@Url.Action("Index", "Questions")'" value="Go back to list" class="btn btn-info btn-lg" />
</div>
