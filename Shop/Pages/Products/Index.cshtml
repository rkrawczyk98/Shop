@model IEnumerable<ProjektSemestralny.Models.Answer>

@{
    ViewData["Title"] = "Index";
}

<h1>Answers</h1>

<p>
    <a asp-action="Create"><button class="btn btn-info btn-lg">Create New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Answer
            </th>
            <th>
                Question
            </th>
            <th>
                Author
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-outline-light btn-sm">Edit</button></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><button class="btn btn-outline-light btn-sm">Details</button></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-outline-light btn-sm">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
