@model ProjektSemestralny.Models.Answer

@{
    ViewData["Title"] = "Details";
}

<h1>Answer details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Answer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            Question
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.Content)
        </dd>
        <dt class = "col-sm-2">
            Author
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Email)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id"><button class="btn btn-info btn-lg">Edit</button></a>
    <input type="button" onclick="location.href='@Url.Action("Index", "Answers")'" value="Go back to list" class="btn btn-info btn-lg" />
</div>
